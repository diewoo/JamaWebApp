<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.sw2.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarPlatillosServlet</servlet-name>
        <servlet-class>com.sw2.servlets.ListarPlatillosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSessionServlet</servlet-name>
        <servlet-class>com.sw2.servlets.AddSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <servlet-class>com.sw2.servlets.RegistrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresarPlatilloServlet</servlet-name>
        <servlet-class>com.sw2.servlets.IngresarPlatilloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestionPlatillo</servlet-name>
        <servlet-class>com.sw2.servlets.gestionPlatillo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crud</servlet-name>
        <servlet-class>com.sw2.servlets.crud</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarPlatillosServlet</servlet-name>
        <url-pattern>/ListarPlatillosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSessionServlet</servlet-name>
        <url-pattern>/AddSessionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <url-pattern>/RegistrarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresarPlatilloServlet</servlet-name>
        <url-pattern>/IngresarPlatilloServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestionPlatillo</servlet-name>
        <url-pattern>/gestionPlatillo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crud</servlet-name>
        <url-pattern>/crud</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
